<%= form_for([@list, @assignment]) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class:"form-control floating-label" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description, class: "form-control floating-label" %>
  </div>
  <div class="form-group">
    <%= form.label :expiration_time %>
    <%= form.datetime_local_field(:expiration_time) %>
  </div>
  <div class="actions">
    <%= form.submit "Guardar", class: "btn btn-info" %>
  </div>
<% end %>
