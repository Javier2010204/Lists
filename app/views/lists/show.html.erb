<p>
  <strong style="color: <%= @list.color %>">Titulo:</strong>
  <%= @list.title %>
</p>

<p>
  <strong>Descripcion:</strong>
  <span><%= @list.description %></span>
</p>

<p>
  <strong>Creado por:</strong>
  <%= @list.user.email %>
</p>

<p>
  <strong>Color:</strong>
  <%= @list.color %>
</p>

<div>
	<h4>Tareas</h4>
	<%= render 'assignments/form' %>
  <ul>
    <% @list.assignments.each do |tarea|%>
      <li>
        <%= tarea.title %>
        <%= tarea.description %>
        <%= tarea.state %>
      </li>
    <% end %>
  </ul>
</div>

<%= link_to 'Edit', edit_list_path(@list) %> |
<%= link_to 'Back', lists_path %>
